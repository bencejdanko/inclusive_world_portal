# Docker Environment Configuration
# Copy this file to .env.docker and update the values

# PostgreSQL Database
POSTGRES_DB=inclusive_world_portal
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_in_production

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=changeme_to_a_50_character_random_string
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
DJANGO_DEBUG=False
DJANGO_ADMIN_URL=admin/

# Security (Production)
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_SECONDS=60
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True

# Database URL (constructed from PostgreSQL variables above)
# DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis URL
# REDIS_URL=redis://redis:6379/0

# Email Configuration
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_URL=smtp+tls://user%40domain.com:password@smtp.gmail.com:587
DJANGO_DEFAULT_FROM_EMAIL="Your Site <noreply@your-domain.com>"
DJANGO_SERVER_EMAIL="Your Site <noreply@your-domain.com>"
DJANGO_EMAIL_SUBJECT_PREFIX="[Your Site] "

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_test_key
STRIPE_SECRET_KEY=sk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Celery Configuration
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=60

# Django AllAuth
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True
DJANGO_ADMIN_FORCE_ALLAUTH=False

# MinIO / S3 Storage Configuration (Required)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme_secure_password_here
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=changeme_secure_password_here
AWS_STORAGE_BUCKET_NAME=inclusive-world-media
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_REGION_NAME=us-east-1
AWS_S3_USE_SSL=false
# For production with public MinIO, set this to your MinIO public URL:
# AWS_S3_CUSTOM_DOMAIN=minio.your-domain.com
